<mat-button-toggle-group formControlName="{{name}}"
  {{#if (isDefined disabled)}}
                         [disabled]="{{disabled}}"
  {{/if}}
  {{#if (isDefined hideSingleSelectionIndicator)}}
                         [hideSingleSelectionIndicator]="{{hideSingleSelectionIndicator}}"
  {{/if}}
  {{#if (isDefined hideMultiSelectionIndicator)}}
                         [hideMultipleSelectionIndicator]="{{hideMultiSelectionIndicator}}"
  {{/if}}
  {{#if (isDefined orientateVertical)}}
                         [vertical]="{{orientateVertical}}"
  {{/if}}
  {{#if (isDefined buttonToggleAppearance)}}
                         appearance="{{buttonToggleAppearance}}"
  {{/if}}
  {{#if (isDefined multiple)}}
                         multiple
  {{/if}}>
  {{#each fieldSelectOptions}}
  <mat-button-toggle [value]="'{{this.selectableValue}}'"
    {{#if (isDefined ../disableRipple)}}
                     [disableRipple]="{{../disableRipple}}"
    {{/if}}
    {{#if (isDefined ../disabledInteractive)}}
                     [disabledInteractive]="{{../disabledInteractive}}"
    {{/if}}>
    {{~this.displayName~}}
  </mat-button-toggle>
  {{else}}
  <mat-button-toggle {{#if (isDefined ../disableRipple)}} [disableRipple]="{{../disableRipple}}"{{/if}}
    {{#if (isDefined ../disabledInteractive)}}
                     [disabledInteractive]="{{../disabledInteractive}}"
    {{/if}}>No options provided</mat-button-toggle>
  {{/each}}
</mat-button-toggle-group>
