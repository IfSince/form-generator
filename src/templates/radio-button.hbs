<mat-radio-group formControlName="{{name}}"
  {{#if (isDefined required)}}
                 [required]="{{required}}"
  {{/if}}
  {{#if (isDefined disabled)}}
                 [disabled]="{{disabled}}"
  {{/if}}
  {{#if (isDefined disabledInteractive)}}
                 [disabledInteractive]="{{disabledInteractive}}"
  {{/if}}>
  {{#each fieldSelectOptions}}
  <mat-radio-button value="{{this.selectableValue}}"
    {{#if (isDefined ../disableRipple)}}
                    [disableRipple]="{{../disableRipple}}"
    {{/if}}
    {{#if (isDefined ../labelPosition)}}
                    [labelPosition]="{{../labelPosition}}"
    {{/if}}>
    {{~this.displayName~}}
  </mat-radio-button>
  {{else}}
  <mat-radio-button>No options provided</mat-radio-button>
  {{/each}}
</mat-radio-group>
